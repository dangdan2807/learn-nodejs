<div class='mt-4'>
    <h3>Khóa học của tôi</h3>
    <table class='table mt-4'>
        <thead>
            <tr>
                <th scope='col'>STT</th>
                <th scope='col'>Tên bài hát</th>
                <th scope='col'>Thể hiện</th>
                <th scope='col'>Thời gian tạo</th>
                <th scope='col'></th>
            </tr>
        </thead>
        <tbody>
            {{#each songs}}
                <tr>
                    <th scope='row'>{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.singer}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a href="/songs/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                        <a href="/songs/{{this._id}}/edit" class="btn btn-link">Xóa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>