<div class='mt-4'>
    <h3>Đăng khóa học</h3>
    <form method='POST' action='/courses/store'>
        <div class='mb-3'>
            <label for='name' class='form-label'>Tên khóa học: </label>
            <input type='text' class='form-control' id='name' name='name' placeholder='Nhập tên khóa học....'/>
        </div>
        <div class='mb-3'>
            <label for='description' class='form-label'>Mô tả: </label>
            <input type='text' class='form-control' id='description' name='description' placeholder='Nhập mô tả...'/>
        </div>
        <div class='mb-3'>
            <label for='videoId' class='form-label'>Mã video: </label>
            <input type='text' class='form-control' id='videoId' name='videoId' placeholder='Nhập mã video...'/>
        </div>
        <div class='mb-3'>
            <label for='level' class='form-label'>Mô tả: </label>
            <input type='text' class='form-control' id='level' name='level' placeholder='Nhập trình độ...'/>
        </div>
        <button type='submit' class='btn btn-primary'>Thêm khóa học</button>
    </form>
</div>